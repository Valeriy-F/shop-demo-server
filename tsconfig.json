{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es6"
        ],
        "allowJs": true,
        "strict": true,
        "sourceMap": false,
        "outDir": "./build",
        "module": "commonjs",
        "skipLibCheck": true,
        "noImplicitAny": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*"
    ]
}