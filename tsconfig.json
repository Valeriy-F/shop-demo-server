{
    "compilerOptions": {
        "target": "es6",
        "allowJs": true,
        "strict": true,
        "sourceMap": false,
        "outDir": "./build",
        "module": "commonjs",
        "skipLibCheck": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*",
        "./db/**/*",
    ]
}